{
  "name": "folder_cleaner",
  "version": "1.3.2",
  "description": "A desktop app that organizes and backs up your data",
  "productName": "Folder Cleaner",
  "main": "./scripts/main.js",
  "scripts": {
    "start": "APP_DEV=true electron .",
    "build-portable-linux": "electron-packager . --platform=linux --arch=x64 --out=builds --overwrite --icon=assets/app_icon-1024x1024.png",
    "build-installer-linux": "electron-installer-debian --src builds/app-linux-x64/ --dest builds/app-linux-x64-installer/ --arch amd64"
  },
  "repository": "https://github.com/TomiVidal99/folder_cleaner.git",
  "author": "Tomas Vidal <tomi_vidal_99@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "chokidar": "^3.5.0",
    "electron-localstorage": "^1.0.5"
  },
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.10.5",
    "electron-installer-debian": "^3.1.0"
  },
  "build": {
    "extraResources": [
      "./**"
    ]
  }
}
